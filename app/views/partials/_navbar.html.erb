<% unless @navbar == false %>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">

            <!-- Mobile Navbar Button -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to(image_tag("record-01.png", {width: "120px"}), root_path) %>
            </div>

            <!-- Navbar Left -->
            <ul class="nav navbar-nav navbar-left">
                <!-- Search MixnMatch -->
                <li>
                    <form class="navbar-form navbar-left" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                    </form>
                </li>
                <% unless current_user.profiles.first.nil? %>
                    <a class="navbar-text" href="<%= user_path(current_user.profiles.first.username) %>">My Profile</a>
                <% end %>
                <a class="navbar-text" href="<%= root_path %>">My Artists</a>
                <a class="navbar-text" href="<%= artists_path %>">Browse Artists</a>
                <a class="navbar-text" href="<%= users_path %>">Browse Users</a>
                <a class="navbar-text" href="<%= events_path %>">Events</a>
                <a class="navbar-text" href="#">Favorites</a>
           
            </ul>

            <!-- Collapse Toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <!-- Navbar Right -->
                <ul class="nav navbar-nav navbar-right">

                    <!-- Logged In -->
                    <% if current_user %>
                        <!-- Welcome -->
                        <li class="navbar-text">
                            What up, <%= current_user.name %>!
                        </li>
                        <!-- Settings -->
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= fa_icon 'gear' %></a>
                            <ul class="dropdown-menu" role="menu">
                                <% unless current_user.profiles.first.nil? %>
                                    <li><%= link_to 'View Profile', user_path(current_user.profiles.first.username) %></li>
                                    <li class="divider"></li>
                                <% end %>
                                <% if current_user.profiles.first %>
                                    <li><%= link_to 'Profile Settings', edit_profile_path(current_user.profiles.first.id) %></li>
                                <% else %>
                                    <li><%= link_to 'Profile Settings', new_profile_path %></li>
                                <% end %>
                                <li class="divider"></li>
                                <li><%= link_to 'Account Settings', edit_user_path(current_user) %></li>
                                <li class="divider"></li>
                                <li><%= link_to 'Music Apps', accounts_path %></li>
                                <li class="divider"></li>
                                <li><%= link_to 'Log Out', signout_path %></li>
                            </ul>
                        </li>
                        
                    <!-- Logged Out -->
                    <% else %>
                        <li><button type="submit" class="btn btn-default navbar-btn" data-toggle="modal" data-target="#login">Log In</button></li>
                    <% end %>

                </ul> <!-- end navbar-right -->

            </div> <!-- end collapse -->

        </div> <!-- end container-fluid -->
    </nav>
<% end %>