<% unless @navbar == false %>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">

            <!-- Mobile Navbar Button -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to(image_tag("record-01.png", {width: "120px"}), root_path) %>
            </div>

            <!-- Navbar Left -->
            <ul class="nav navbar-nav navbar-left">
                <!-- Search MixnMatch -->
                <li>
                    <form class="navbar-form navbar-left" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                    </form>
                </li>
                <!-- Navbar Links -->
                <li class="navbar-link"><%= link_to 'Browse Artists', artists_path %></li>
                <li class="navbar-link"><%= link_to 'Find Users', users_path %></li>
                <li class="navbar-link"><%= link_to 'Events', events_path %></li>
                <li class="navbar-link"><%= link_to 'Favorites', root_path %></li>
            </ul>

            <!-- Collapse Toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <!-- Navbar Right -->
                <ul class="nav navbar-nav navbar-right">

                    <!-- Logged In -->
                    <% if current_user %>
                        <% unless current_user.profiles.first.nil? %>
                            <!-- User Profile and Settings -->
                            <li class="navbar-avatar">
                                <a href="<%= user_path(current_user.profiles.first.username) %>">
                                    <div class="avatar" ng-style="{'background-image':'url(<%= current_user.avatar %>)', 'background-size':'cover', 'background-position':'center'}"></div>
                                </a>
                            </li>
                            <li class="navbar-link">
                                <%= link_to current_user.profiles.first.username, user_path(current_user.profiles.first.username) %>
                            </li>
                        <% end %>
                        <!-- Settings -->
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= fa_icon 'gear' %></a>
                            <ul class="dropdown-menu" role="menu">
                                <% unless current_user.profiles.first.nil? %>
                                    <li><%= link_to 'View Profile', user_path(current_user.profiles.first.username) %></li>
                                    <li class="divider"></li>
                                <% end %>
                                <% if current_user.profiles.first %>
                                    <li><%= link_to 'Profile Settings', edit_profile_path(current_user.profiles.first.id) %></li>
                                <% else %>
                                    <li><%= link_to 'Profile Settings', new_profile_path %></li>
                                <% end %>
                                <li class="divider"></li>
                                <li><%= link_to 'Account Settings', edit_user_path(current_user) %></li>
                                <li class="divider"></li>
                                <% unless current_user.profiles.first.nil? %>
                                    <li><%= link_to 'Music Apps', accounts_path %></li>
                                    <li class="divider"></li>
                                <% end %>
                                <li><%= link_to 'Log Out', signout_path %></li>
                            </ul>
                        </li>
                        
                    <!-- Logged Out -->
                    <% else %>
                        <li><button type="submit" class="btn btn-default navbar-btn" data-toggle="modal" data-target="#login">Log In</button></li>
                    <% end %>

                </ul> <!-- end navbar-right -->

            </div> <!-- end collapse -->

        </div> <!-- end container-fluid -->
    </nav>
<% end %>