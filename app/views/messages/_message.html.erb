<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if message.name == current_user.name %>

    <div class="bubble bubble-black pull-left">
      <div class="black text-center ">
        <span class="created_at"><%= message.created_at.strftime("%B %e, %Y (%H:%M)") %></span><br><br>
       <div class="message-content pull-left"><strong><%= message.name %>: </strong><%= message.content %></div>
      </div>
    </div>
    <% @user = User.where(id: message.user_id).first %>
    <div class="avatar" ng-style="{'background-image':'url(<%= @user.avatar %>)', 'background-size':'cover', 'background-position':'center'}"></div>

    <% else %>
    <div class="bubble bubble-pink pull-right">
      <div class="pink text-center">
        <span class="created_at"><%= message.created_at.strftime("%B %e, %Y (%H:%M)") %></span><br><br>
        <div class="message-content pull-right"><strong><%= message.name %>: </strong><%= message.content %></div>
      </div>
    </div>

    <% end %>
  </div>
</div>